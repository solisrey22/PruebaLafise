@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="card text-success">
    <div class="card-header text-center">
        <h5>Lista de Productos</h5>        
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a asp-action="Create" class="btn btn-primary btn-sm">Crear Nuevo</a>
                        <hr />
                        <h5 class="panel-title">Productos</h5>
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" id="MyTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Descripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdCategoria)
                                    </th>

                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdCategoria)
                                        </td>
    
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-light btn-sm">Detalles</a>
                                            <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-info btn-sm">Editar</a>
                                            <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-danger btn-sm">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-muted text-center">
        CRUD Productos
    </div>
</div>